{
    "name": "PriceEdge: Track your competitors",
    "description": "Layer and see our competitor data on top of where you already spend most of your time â€“ your own website.",
    "version": "1.3.15",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "declarativeContent"
    ],
    "host_permissions": [
                "*://*.priceedge.eu/*"
            ],
    "action": {
        "default_popup": "components/popup.html",
        "default_icon": "/images/favicon.png",
        "default_title": "Priceedge extension"
    },
    "icons": {
        "16": "/images/favicon.png",
        "32": "/images/favicon.png",
        "48": "/images/favicon.png",
        "128": "/images/favicon.png"
    },
    "content_scripts": [
        {
            "matches": [ "https://*/*"],
            "js": [ "js/content-script.js" ],
            "css": ["css/pe-dev.css"]
        }
    ],
    "options_page": "components/options.html"
}